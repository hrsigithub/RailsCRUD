<h1 class="text-center my-4">Articles</h1>

<div class="text-center mb-3">
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.content, length: 100) %></p>
            <div class="d-flex justify-content-between">
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning" %>
              <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
